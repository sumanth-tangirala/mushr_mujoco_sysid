{
  "_comment": "Experiment 1: Trajectory validation - structured_residual_only",
  "_purpose": "Fix validation selection with trajectory-based split (improves checkpoint quality)",
  "seed": 42,
  "data": {
    "data_dir": "data/sysid_trajs",
    "num_eval_trajectories": 50,
    "val_ratio": 0.1,
    "val_split_mode": "trajectory"
  },
  "model": {
    "type": "structured",
    "learn_friction": false,
    "learn_residual": true,
    "friction_use_dt": true,
    "friction_use_delta": true,
    "friction_use_vy": true,
    "control_adapter": {
      "enabled": true,
      "include_speed_mag_steer": true,
      "include_speed_sign_steer": true,
      "include_speed_mag_acc": true,
      "include_speed_sign_acc": true,
      "include_vy_acc": true,
      "include_w_acc": true,
      "steer_output_scale": 0.6,
      "acc_output_scale": 1.0
    },
    "friction_param": {
      "mode": "softplus_offset_1",
      "k_min": 0.2,
      "k_max": 2.0
    }
  },
  "training": {
    "batch_size": 256,
    "epochs": 1000,
    "lr": 0.001,
    "weight_decay": 0.0,
    "device": "cuda",
    "run_root": "experiments/exp1_traj_val",
    "run_name": "residual_only",
    "ckpt_name": "best.pt",
    "eval_every": 5,
    "lr_scheduler": "cosine",
    "lr_t_max": 1000,
    "lr_eta_min": 1e-06,
    "loss": {
      "one_step_mse": {
        "enabled": true,
        "weight": 1.0
      },
      "rollout_mse": {
        "enabled": false,
        "horizon": 10,
        "weight": 1.0,
        "teacher_forcing_prob": 0.0,
        "detach_between_steps": false
      },
      "pose_mse": {
        "enabled": false,
        "weight": 0.1,
        "components": [
          "x",
          "y"
        ]
      },
      "weights": {
        "vx": 1.0,
        "vy": 1.0,
        "w": 1.0
      }
    },
    "regularization": {
      "adapter_identity_weight": 0.0,
      "residual_l2_weight": 0.0,
      "friction_prior_weight": 0.0
    },
    "optim": {
      "grad_clip_norm": 0.0
    }
  }
}