{
  "_comment": "CONFIG B: Structured all-star with h=10, TF=0.0",
  "_purpose": "No teacher forcing, seed=4",
  "seed": 4,
  "data": {
    "data_dir": "data/sysid_trajs_v3",
    "num_eval_trajectories": 50,
    "val_ratio": 0.1,
    "val_split_mode": "trajectory",
    "debug_control_variation": false
  },
  "model": {
    "type": "structured",
    "learn_friction": false,
    "learn_residual": true,
    "friction_use_dt": true,
    "friction_use_delta": true,
    "friction_use_vy": true,
    "control_adapter": {
      "enabled": true,
      "include_speed_mag_steer": true,
      "include_speed_sign_steer": true,
      "include_speed_mag_acc": true,
      "include_speed_sign_acc": true,
      "include_vy_acc": true,
      "include_w_acc": true,
      "steer_output_scale": 0.6,
      "acc_output_scale": 1.0
    },
    "friction_param": {
      "mode": "softplus_offset_1",
      "k_min": 0.2,
      "k_max": 2.0
    }
  },
  "training": {
    "batch_size": 256,
    "epochs": 1000,
    "lr": 0.001,
    "weight_decay": 0.0,
    "device": "cuda",
    "run_root": "experiments/v3_allstars_controls_vary/v3B_struct_h10_tf0_seed4",
    "run_name": "v3B_struct_h10_tf0_seed4",
    "ckpt_name": "best.pt",
    "eval_every": 5,
    "early_stop_patience": 50,
    "early_stop_min_delta": 1e-06,
    "lr_scheduler": "cosine",
    "lr_t_max": 1000,
    "lr_eta_min": 1e-06,
    "loss": {
      "one_step_mse": {
        "enabled": true,
        "weight": 1.0
      },
      "rollout_mse": {
        "enabled": true,
        "horizon": 10,
        "weight": 0.5,
        "teacher_forcing_prob": 0.0,
        "detach_between_steps": false
      },
      "pose_mse": {
        "enabled": true,
        "weight": 0.05,
        "components": [
          "x",
          "y"
        ]
      },
      "rollout_cvar": {
        "enabled": false,
        "alpha": 0.2,
        "apply_to": "rollout_plus_pose",
        "min_k": 1
      },
      "weights": {
        "vx": 1.0,
        "vy": 1.0,
        "w": 2.0
      }
    },
    "regularization": {
      "adapter_identity_weight": 0.0,
      "residual_l2_weight": 0.0,
      "friction_prior_weight": 0.0
    },
    "optim": {
      "grad_clip_norm": 1.0
    }
  }
}