{
  "_comment": "CONFIG G: Direct MLP without adapter, h=20, TF=0.0",
  "_purpose": "Pure MLP baseline with strong rollout setup",
  "seed": 4,
  "data": {
    "data_dir": "data/sysid_trajs_v3",
    "num_eval_trajectories": 50,
    "val_ratio": 0.1,
    "val_split_mode": "trajectory",
    "debug_control_variation": false
  },
  "model": {
    "type": "direct",
    "hidden_dims": [
      256,
      256,
      128
    ],
    "control_adapter": {
      "enabled": false
    }
  },
  "training": {
    "batch_size": 256,
    "epochs": 1000,
    "lr": 0.001,
    "weight_decay": 0.0,
    "device": "cuda",
    "run_root": "experiments/v3_allstars_controls_vary/v3G_direct_no_adapter_h20_tf0_seed4",
    "run_name": "v3G_direct_no_adapter_h20_tf0_seed4",
    "ckpt_name": "best.pt",
    "eval_every": 5,
    "early_stop_patience": 50,
    "early_stop_min_delta": 1e-06,
    "lr_scheduler": "cosine",
    "lr_t_max": 1000,
    "lr_eta_min": 1e-06,
    "loss": {
      "one_step_mse": {
        "enabled": true,
        "weight": 1.0
      },
      "rollout_mse": {
        "enabled": true,
        "horizon": 20,
        "weight": 0.5,
        "teacher_forcing_prob": 0.0,
        "detach_between_steps": false
      },
      "pose_mse": {
        "enabled": true,
        "weight": 0.05,
        "components": [
          "x",
          "y"
        ]
      },
      "rollout_cvar": {
        "enabled": false,
        "alpha": 0.2,
        "apply_to": "rollout_plus_pose",
        "min_k": 1
      },
      "weights": {
        "vx": 1.0,
        "vy": 1.0,
        "w": 2.0
      }
    },
    "regularization": {
      "adapter_identity_weight": 0.0,
      "residual_l2_weight": 0.0,
      "friction_prior_weight": 0.0
    },
    "optim": {
      "grad_clip_norm": 1.0
    }
  }
}