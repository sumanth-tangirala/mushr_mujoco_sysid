{
  "seed": 42,
  "data": {
    "data_dir": "data/sysid_trajs",
    "num_eval_trajectories": 50,
    "val_ratio": 0.1,
    "val_split_mode": "timestep"
  },
  "model": {
    "type": "structured",
    "learn_friction": true,
    "learn_residual": false,
    "friction_use_dt": true,
    "friction_use_delta": true,
    "friction_use_vy": true,
    "friction_param": {
      "mode": "sigmoid_range",
      "k_min": 0.2,
      "k_max": 2.0
    },
    "control_adapter": {
      "enabled": true,
      "include_speed_mag_steer": true,
      "include_speed_sign_steer": true,
      "include_speed_mag_acc": true,
      "include_speed_sign_acc": true,
      "include_vy_acc": true,
      "include_w_acc": true,
      "steer_output_scale": 0.6,
      "acc_output_scale": 1.0
    }
  },
  "training": {
    "batch_size": 256,
    "epochs": 1000,
    "lr": 0.001,
    "weight_decay": 0.0,
    "device": "cuda",
    "run_root": "experiments/friction_sigmoid",
    "run_name": null,
    "ckpt_name": "best.pt",
    "eval_every": 5,
    "lr_scheduler": "cosine",
    "lr_t_max": 1000,
    "lr_eta_min": 1e-6,
    "loss": {
      "one_step_mse": { "enabled": true, "weight": 1.0 }
    },
    "regularization": {
      "friction_prior_weight": 0.01
    }
  }
}
