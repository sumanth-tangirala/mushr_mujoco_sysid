{
  "_comment": "Experiment 5: Adapter + tiny residual",
  "_purpose": "Almost adapter-only with emergency residual capability",
  "_key_feature": "Strong L2 penalty (0.05) keeps residual small",
  "_interpretation": "If this becomes competitive, plant mismatch is not representable by control remapping",
  "seed": 42,
  "data": {
    "data_dir": "data/sysid_trajs_v3",
    "num_eval_trajectories": 150,
    "val_ratio": 0.1,
    "val_split_mode": "trajectory"
  },
  "model": {
    "type": "structured",
    "learn_friction": false,
    "learn_residual": true,
    "friction_use_dt": true,
    "friction_use_delta": true,
    "friction_use_vy": true,
    "control_adapter": {
      "enabled": true,
      "include_speed_mag_steer": true,
      "include_speed_sign_steer": true,
      "include_speed_mag_acc": true,
      "include_speed_sign_acc": true,
      "include_vy_acc": true,
      "include_w_acc": true,
      "steer_output_scale": 0.6,
      "acc_output_scale": 1.0
    }
  },
  "training": {
    "batch_size": 256,
    "epochs": 1000,
    "lr": 0.001,
    "weight_decay": 0.0,
    "device": "cuda",
    "run_root": "experiments/exp5_adapter_residual",
    "run_name": "adapter_tiny_residual",
    "ckpt_name": "best.pt",
    "eval_every": 5,
    "early_stop_patience": 50,
    "early_stop_min_delta": 1e-6,
    "lr_scheduler": "cosine",
    "lr_t_max": 1000,
    "lr_eta_min": 1e-6,
    "loss": {
      "one_step_mse": {
        "enabled": true,
        "weight": 1.0
      },
      "rollout_mse": {
        "enabled": true,
        "horizon": 10,
        "weight": 0.5,
        "teacher_forcing_prob": 0.2,
        "detach_between_steps": false
      },
      "pose_mse": {
        "enabled": true,
        "weight": 0.05,
        "components": ["x", "y"]
      },
      "weights": {
        "vx": 1.0,
        "vy": 1.0,
        "w": 2.0
      }
    },
    "regularization": {
      "adapter_identity_weight": 0.0,
      "residual_l2_weight": 0.05,
      "friction_prior_weight": 0.0
    },
    "optim": {
      "grad_clip_norm": 1.0
    }
  }
}
